<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:minHeight="200dp"
        android:layout_margin="0dp"
        android:background="@color/colorUnos">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Zadnje mjerenje: ("
            android:id="@+id/tvZadnjeMjerenje"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="75dp"
                    android:text="Sistolički:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(vrijednost)"
                    android:gravity="center"
                    android:id="@+id/tvSistolicki"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dijastolički:"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(vrijednost)"
                    android:gravity="center"
                    android:id="@+id/tvDijastolicki"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puls:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(vrijednost)"
                    android:gravity="center"
                    android:id="@+id/tvPuls"/>

            </TableRow>

        </TableLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/buttonDodajTlak"
            android:layout_gravity="top|end"
            android:src="@drawable/add"
            android:background="@color/colorUnos"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            android:paddingTop="16dp">

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:text="Vrijeme"
                    android:padding="3dip"
                    android:minWidth="65pt"
                    android:gravity="center"
                    android:textStyle="bold" />


                <TextView
                    android:text="Tlak"
                    android:padding="3dip"

                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:text="Puls"
                    android:minWidth="40pt"
                    android:padding="3dip"
                    android:gravity="center"
                    android:textStyle="bold" />


            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:text="13.03.1991."
                    android:padding="3dip"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTableA1"/>

                <TextView
                    android:text="Open..."
                    android:padding="3dip"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTableA2" />

                <TextView
                    android:text="Ctrl-O"
                    android:gravity="center"
                    android:padding="3dip"
                    android:textStyle="italic"
                    android:id="@+id/tvTableA3"/>
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>
                <TextView
                    android:text="02.03.2015."
                    android:padding="3dip"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTableB1"/>

                <TextView
                    android:text="Ctrl-S"
                    android:gravity="center"
                    android:padding="3dip"
                    android:textStyle="italic"
                    android:id="@+id/tvTableB2"/>

                <TextView
                    android:text="Ctrl-S"
                    android:gravity="center"
                    android:padding="3dip"
                    android:textStyle="italic"
                    android:id="@+id/tvTableB3"/>
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>
                <TextView
                    android:text="13.02.1991."
                    android:padding="3dip"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTableC1"/>

                <TextView
                    android:text="Ctrl-Shift-S"
                    android:gravity="center"
                    android:padding="3dip"
                    android:textStyle="italic"
                    android:id="@+id/tvTableC2"/>

                <TextView
                    android:text="Save As..."
                    android:padding="3dip"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:id="@+id/tvTableC3"/>
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

        </TableLayout>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/buttonPovijest"
            android:layout_gravity="top|end"
            android:src="@drawable/doctor"
            android:background="@color/colorBackground" />

    </LinearLayout>





</LinearLayout>

